{{> header}}

<div class="container">
    <div class="row">
        <div class="col-12">
        <h1>Modificare il prodotto {{product.name}}</h1>
        <p>Aggingi un prodotto qui sotto</p>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
        <form action="/products/edit" method="post">
        <input type="hidden" name="_id" value="{{product.id}}">
            <div class="form-group">
                <label for="name">Product Name</label>
                <input type="text" class="form-control" id="name" name="name" value="{{product.name}}">
            </div>
            <div class="form-group">
                <label for="price">Price</label>
                <input type="number" class="form-control" id="price" name="price" value="{{product.price}}" step=".01">
            </div>
            <div class="form-group">
                <label for="quantity">Quantity</label>
                <input type="number" class="form-control" id="quantity" name="quantity" value="{{product.quantity}}">
            </div>
            <br>
            <button type="submit" class="btn btn-primary">Add Product</button>
        </form>
        </div>
    </div>
</div>


{{> footer}}