{{> header }}

<div class="container">
    <div class="row">
        <div class="col-12">
        <h1>Products</h1>
        <p>Prodotti disponibili</p>
        </div>
    </div>
    
    <div class="row">
        <div class="col-12">
        <table class="table">
            <thead>
            <tr>
                <th scope="col">Product Name</th>
                <th scope="col">Info</th>
            </tr>
            </thead>
            <tbody>
            {{#each products}}
                <tr>
                    <td>{{this.name}}</td>
                    <td><a href="/products/info/{{this.id}}"><button class="btn btn-primary"><i class="bi bi-info-square"></i></button></a></td>
                </tr>
            {{/each}}
            </tbody>
        </table>
        </div>
    </div>
</div>

{{> footer }}